@model SuperheroManager.Models.Superhero

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Superhero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><strong>Name</strong></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><strong>Alter Ego</strong></label>
                <input asp-for="AlterEgo" class="form-control" />
                <span asp-validation-for="AlterEgo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><strong>Primary Superpower</strong></label>
                <input asp-for="PrimarySuperheroAbility" class="form-control" />
                <span asp-validation-for="PrimarySuperheroAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><strong>Secondary Superpower</strong></label>
                <input asp-for="SecondarySuperheroAbility" class="form-control" />
                <span asp-validation-for="SecondarySuperheroAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><strong>Catchphrase</strong></label>
                <input asp-for="Catchphrase" class="form-control" />
                <span asp-validation-for="Catchphrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
